# check both UUID= and /dev/mapper/NAME here to check for regressions a la #902943
cat >/etc/crypttab <<-EOF
	root_crypt UUID=$(blkid -s UUID -o value /dev/testvg/cryptroot) none luks,discard
	swap_crypt /dev/mapper/testvg-cryptswap none luks,discard
EOF

cat >/etc/fstab <<-EOF
	/dev/mapper/root_crypt /    auto errors=remount-ro 0 1
	/dev/mapper/swap_crypt none swap sw                0 0
	UUID=$(blkid -s UUID -o value /dev/vda2) /boot auto defaults 0 2
EOF

mkdir -p /etc/initramfs-tools/conf.d
echo "RESUME=/dev/mapper/swap_crypt" >/etc/initramfs-tools/conf.d/resume

# vim: set filetype=sh :
